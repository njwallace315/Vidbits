<div class="contents-container" id="videos-container">
  {{#each videos as |video|}}
  <div class="video-card">
    <div class="image-overlay">
      <div class="overlay-button delete-button">
        <!--TODO: this delete button is not ckickable-->
        <a href="/{{video._id}}/delete" id="{{video_id}}-delete-button">
          <img src="/img/Delete.svg" />
        </a>
      </div>
      <div class="overlay-button view-button">
        <a href="/{{video._id}}/edit" id="edit-button-{{video_id}}">
          <img src="/img/play.svg" alt="view">
          <p>Edit</p>
        </a>
      </div>
    </div>
    <div class="video-player">
      <iframe class="video-player" src={{video.videoUrl}} frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="video-title" >
      <a id="video-title" href="/{{video._id}}">{{video.title}}</a>
    </div>
  </div>
  {{/each}}
</div>
</div>
<div id="navigation">
  <a href="/create">
    <div class="create-button" id="create-button">
      <p>Add new video</p>
    </div>
  </a>
</div>
